<div class="content-item recipe-container">
    <h2><%= @recipe.name %></h2>
    <div class="recipe-container-content">
        <div>
            <h3>Ingredients</h3>
                <ul>
                    <% @recipe.list_ingredients.each do |ingredient| %>
                        <li><%= ingredient %></li>
                    <% end %>
                </ul>
            <h3>Instructions</h3>
            <ol>
                <% @recipe.list_instructions.each do |instruction| %>
                    <li><%= instruction %></li>
                <% end %>
            </ol>
        </div>
        <div>
            <% if @recipe.image.present? %>
                <%= image_tag @recipe.image %>
            <% else %>
                <p>No image available</p>
            <% end %>
        </div>
    </div>
</div>