<div class="content-container">
    <div class="content-title">
        <h2><%= @recipe.name %></h2>
        <p><%= link_to "Edit recipe", edit_user_recipe_path(current_user.id, @recipe) %>
        <% if flash[:msg] %>
            <span class="err-msg"><%= flash[:msg] %></span>
        <% end %>
        </p>
    </div>
</div>
<div class="content-item recipe-container">
    <div class="recipe-container-content">
        <div>
            <h3>Ingredients</h3>
                <ul>
                    <% @recipe.list_ingredients.each do |ingredient| %>
                        <li><%= ingredient %></li>
                    <% end %>
                </ul>
            <h3>Instructions</h3>
            <ol>
                <% @recipe.list_instructions.each do |instruction| %>
                    <li><%= instruction %></li>
                <% end %>
            </ol>
        </div>
        <div>
            <% if @recipe.image.present? %>
                <%= image_tag @recipe.image %>
            <% else %>
                <p>No image available</p>
            <% end %>
        </div>
    </div>
</div>