<%= render partial: 'layouts/content_page_subtitle', locals: {subtitle: "Recipes"} %>


<%= form_tag(recipes_found_path, method: "GET") do %>
    <%= text_field_tag :search %>
    <%= submit_tag "Find" %>
<% end %>

<div class="content-item content-container">
    <div class="content-item">
        <% if flash[:error] %>
            <p class="err-msg"><%= flash[:error] %></p>
            <% form_err = true %>
        <% end %>
        <% if flash[:msg] %>
            <p><%= flash[:msg] %></p>
        <% end %>

        <% if current_user %>
            <%= button_to "Add new recipe", new_user_recipe_path(current_user), method: :get %>
        <% end %>
    </div>
</div>
<div class="content-item content-container">
    <div class="content-item content-size-half">
        <p>
            <strong>Vegetarian</strong> | <%= link_to "all vegetarian", recipes_vegetarian_path %>
        </p>
        <%= render collection: @recipes_vegetarian, partial: "recipe_p", as: :recipe %>
    </div>
    <div class="content-item content-size-half">
        <p>
            <strong>Vegan</strong> | <%= link_to "all vegan", recipes_vegan_path %>
        </p>
        <%= render collection: @recipes_vegan, partial: "recipe_p", as: :recipe %>
    </div>
</div>
<% if @results %>
<div class="content-item content-container">
    <div class="content-item content-size-half">
        <p>
            <strong>Found</strong> 
        </p>
        <%= render collection: @results, partial: "recipe_p", as: :recipe %>
    </div>
</div>
<% end %>